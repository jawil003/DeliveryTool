<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="237.0" prefWidth="457.0"
          xmlns="http://javafx.com/javafx/11.0.1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="296.0" minWidth="10.0" prefWidth="79.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="531.0" minWidth="10.0" prefWidth="378.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="282.0" minHeight="10.0" prefHeight="180.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="370.0" minHeight="10.0" prefHeight="115.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="Name:">
            <padding>
                <Insets left="10.0"/>
            </padding>
        </Label>
        <TextField fx:id="nameTextField" prefHeight="27.0" prefWidth="368.0" promptText="Namen eingeben"
                   GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </TextField>
        <HBox alignment="CENTER" spacing="10.0" GridPane.columnSpan="2" GridPane.halignment="CENTER"
              GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <children>
                <Button fx:id="abbrechenButton" mnemonicParsing="false" text="Abbrechen"/>
                <Button fx:id="okButton" mnemonicParsing="false" text="OK"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </HBox>
    </children>
</GridPane>
